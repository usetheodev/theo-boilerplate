# ===========================
# Application
# ===========================
NODE_ENV=development
APP_NAME="Theo Boilerplate"
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# ===========================
# Database
# ===========================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/theo_dev?schema=public"

# Test Database
TEST_DATABASE_URL="postgresql://test:test@localhost:5433/theo_test?schema=public"

# ===========================
# Authentication
# ===========================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# ===========================
# Email (SMTP)
# ===========================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_FROM=noreply@yourapp.com
MAIL_FROM_NAME="Theo Boilerplate"

# ===========================
# Redis
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================
# CORS
# ===========================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================
# Logging
# ===========================
LOG_LEVEL=info

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=100

# ===========================
# Frontend (Next.js)
# ===========================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME="Theo Boilerplate"
